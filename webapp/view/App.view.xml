<mvc:View
   controllerName="sap.ui.demo.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
    <Button 
        text="Say World" 
        press=".openDialog"
    />
    <Input
      value="{
        path: '/recipient/name',
				type: 'sap.ui.model.type.Currency'
      }"
      description="Hello {/recipient/name}"
      valueLiveUpdate="true"
      width="60%"/>
</mvc:View>